<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_margin="16dp"
        tools:ignore="MissingConstraints"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/iv_product_item_photo"
                android:src="@drawable/cart"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_item_title"
                android:textSize="16sp"
                android:text="Titlu produs"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/iv_product_item_photo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_item_price"
                android:textSize="12sp"
                android:text="Pret"
                android:textColor="@color/orangey_red"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/iv_product_item_photo"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_item_seller_foo"
                android:textSize="12sp"
                android:text="Vandut de:"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/tv_product_item_price"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/iv_product_item_favorite"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/heart_favorite_not_added"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>